# ============================================================================
# BUDGET REQUEST MICROSERVICE - Environment Configuration
# ============================================================================

# ────────────────────────────────
# 🔧 Server Configuration
# ────────────────────────────────
NODE_ENV=development
PORT=4001
SERVICE_NAME=budget-request-microservice
NEXT_PUBLIC_API_BASE_URL=http://localhost:4001

# ────────────────────────────────
# 🗄️ Database Connection
# ────────────────────────────────
BUDGET_REQUEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/budget_db?schema=public

# ────────────────────────────────
# 🔐 Security and Auth Config
# ────────────────────────────────
# JWT Secret (must match FTMS for token verification)
JWT_SECRET=your-very-long-jwt-secret-key-minimum-32-characters-for-security
JWT_DISABLED=false

# ────────────────────────────────
# 🔗 Microservices Integration
# ────────────────────────────────
# Finance/FTMS Main Backend
FINANCE_API_URL=http://localhost:4000
FINANCE_API_KEY=FTMS_SERVICE_SECRET_KEY_CHANGE_IN_PRODUCTION

# Audit Logs Microservice
AUDIT_LOGS_API_URL=http://localhost:4004
AUDIT_API_KEY=AUDIT_SERVICE_SECRET_KEY_CHANGE_IN_PRODUCTION

# ────────────────────────────────
# 🚀 Redis Cache Configuration
# ────────────────────────────────
ENABLE_CACHE=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1
REDIS_URL=redis://localhost:6379

# Upstash Redis (for serverless/production)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Cache TTL (Time To Live) in seconds
CACHE_TTL_SECONDS=300

# ────────────────────────────────
# 🌐 CORS Configuration
# ────────────────────────────────
CORS_ORIGIN=http://localhost:4001,http://localhost:3000,http://localhost:4000

# ────────────────────────────────
# 🔄 Rate Limiting
# ────────────────────────────────
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ────────────────────────────────
# 📧 Email Configuration (Optional)
# ────────────────────────────────
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# ────────────────────────────────
# 🔗 Frontend URL
# ────────────────────────────────
FRONTEND_URL=http://localhost:4001

# ────────────────────────────────
# 🔐 Webhook Configuration
# ────────────────────────────────
WEBHOOK_SECRET=your-webhook-secret-key

# ────────────────────────────────
# 🧪 Testing Configuration
# ────────────────────────────────
# Set to 'true' ONLY for local testing - NEVER in production
DISABLE_AUTH=false
